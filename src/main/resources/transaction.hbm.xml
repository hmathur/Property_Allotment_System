<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.xavient.pas.dao.bean.Transaction" table="transaction">
        <id name="transactionId" type="java.lang.Integer">
            <column name="TRANSACTION_ID" />
            <generator class="assigned" />
        </id>
        <property name="customerId" type="java.lang.Integer">
        	<column name="CUSTOMER_ID" />
        </property>
        
        <property name="apartmentId" type="java.lang.Integer">
            <column name="APARTMENT_ID" />
        </property> 
        
         <property name="allotmentId" type="java.lang.Integer">
            <column name="ALLOTMENT_ID" />
        </property>     
     
    </class>
</hibernate-mapping>